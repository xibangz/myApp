<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>myApp</display-name>
  <request-character-encoding>UTF-8</request-character-encoding>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>com.rental.controller.Controller</servlet-class>
  </servlet>



  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>

  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>en</param-value>
  </context-param>

  <context-param>
    <param-name>locales</param-name>
    <param-value>ru en</param-value>
  </context-param>

  <filter>
    <filter-name>CommandAccessFilter</filter-name>
    <filter-class>com.rental.filter.CommandAccessFilter</filter-class>
    <init-param>
      <param-name>admin</param-name>
      <param-value>adminCars administration adminUsers adminDrivers</param-value>
    </init-param>
    <init-param>
      <param-name>client</param-name>
      <param-value>none</param-value>
    </init-param>
    <init-param>
      <param-name>manager</param-name>
      <param-value>management manageOrders manageDriversCars manageUsers</param-value>
    </init-param>
    <init-param>
      <param-name>common</param-name>
      <param-value>logout noCommand carsList order userOrders</param-value>
    </init-param>
    <init-param>
      <param-name>out-of-control</param-name>
      <param-value>login registration</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>CommandAccessFilter</filter-name>
    <url-pattern>/controller</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>

  <listener>
    <listener-class>com.rental.listener.ContextListener</listener-class>
  </listener>


  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error_page.jsp</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/error_page.jsp</location>
  </error-page>
</web-app>
